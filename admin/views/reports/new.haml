.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:reports, :index)
      %li.active=link_to pat(:new), url(:reports, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:report)
    .inner
      -form_for :report, url(:reports, :create), :class => :form do |f|
        =partial "reports/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")