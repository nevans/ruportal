.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:reports, :index)
      %li=link_to pat(:new), url(:reports, :new)
      %li.active=link_to pat(:edit), url(:reports, :edit, :id => @report.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:report)
    .inner
      -form_for :report, url(:reports, :update, :id => @report.id), :method => :put, :class => :form do |f|
        =partial "reports/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")